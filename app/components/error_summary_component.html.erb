<!-- app/components/error_summary_component.html.erb -->
<div class="govuk-error-summary" data-module="govuk-error-summary">
  <div role="alert">
    <h2 class="govuk-error-summary__title">
      <%= @title %>
    </h2>
    <div class="govuk-error-summary__body">
      <%= govuk_list @list, spaced: true, classes: "govuk-error-summary__list" %>
      <% if content.present? %>
        <%= content %>
      <% end %>
    </div>
  </div>
</div>
