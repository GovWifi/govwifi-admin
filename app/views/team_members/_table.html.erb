<table class="govuk-table govuk-!-margin-top-7">
  <tbody class="govuk-table__body">
    <% team_members.each do |member| %>
      <tr class="govuk-table__row">
        <% if member.invitation_pending? %>
          <td class="govuk-table__cell govuk-hint"><%= member.email %></td>
          <td class="govuk-table__cell ">
            <%= button_to("Resend invite",
              user_invitation_path({ user: { email: member.email }}),
              method: :post,
              class: "resend-invite-button govuk-link")
            %>
          </td>
        <% else %>
          <td class="govuk-table__cell">
            <strong><%= member.name %></strong> <span class="govuk-hint"><%= member.email %></span>
          </td>
          <td class="govuk-table__cell"/>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
