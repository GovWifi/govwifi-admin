<% content_for :page_title, "Search logs by username" %>

<%= form_with model: @search, local: true,
              builder: GOVUKDesignSystemFormBuilder::FormBuilder do |f| %>
  <%= f.govuk_error_summary %>
  <div class='govuk-grid-row'>
    <div class='govuk-grid-column-two-thirds'>
      <%= link_to "Back to search options", new_logs_search_path, class: "govuk-back-link" %>
    </div>

    <h1 class='govuk-heading-l govuk-grid-column-full'>Search logs by username</h1>
    <div class='govuk-grid-column-two-thirds'>
      <%= f.govuk_text_field :search_term,
                             hint: { text: "This is an end user's 5- or 6-character username, like 'abcdef'" },
                             label: { text: "Username" } %>
      <%= f.hidden_field :filter %>
      <%= f.govuk_submit "Show logs" %>
    </div>
  </div>
<% end %>
