<% content_for :page_title, "Search logs by location" %>

<%= render "layouts/form_errors", resource: @search %>

<div class='govuk-grid-row'>
  <div class='govuk-grid-column-two-thirds'>
    <%= link_to "Back to search options", new_logs_search_path, class: "govuk-back-link" %>
  </div>

  <h1 class='govuk-heading-l govuk-grid-column-full'>Search logs by location </h1>

  <div class='govuk-grid-column-two-thirds'>
    <%= form_with model: @search, local: true, builder: GOVUKDesignSystemFormBuilder::FormBuilder do |f| %>
      <%= f.govuk_collection_select :search_term, @locations, :id, :full_address, label: { text: "Select one of your organisation's locations" } %>
      <%= f.hidden_field :filter %>
      <%= f.govuk_submit "Show logs" %>
    <% end %>
  </div>
</div>
