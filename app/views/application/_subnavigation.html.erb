<% if current_user.organisations.any? and controller_name != 'current_organisation' %>
  <div class='subnav'>
    <div class='govuk-grid-row'>
      <div class='govuk-grid-column-one-half organisation-name'>
        <strong class="govuk-body"><% if !defined?(@organisation_specific) || @organisation_specific %><%= current_organisation.name %><% end %></strong>
      </div>
      <nav class='govuk-grid-column-one-half'>
        <%= link_to 'Switch organisation', change_organisation_path, class: "govuk-link govuk-body" %>
      </nav>
    </div>
  </div>
  <hr class="govuk-section-break govuk-section-break--xs govuk-section-break--visible">
<% end %>
