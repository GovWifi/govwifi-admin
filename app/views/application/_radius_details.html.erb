<details class="govuk-details">
  <summary class="govuk-details__summary">
    <span class="govuk-details__summary-text">
      Show connection details
    </span>
  </summary>
  <div class="govuk-details__text">
    <p> Your RADIUS secrets are:</p>
    <ul class="govuk-list">
      <% current_organisation.locations.each do |loc| %>
        <li><%= "#{loc.address}, #{loc.postcode}" %> - <strong><%= loc.radius_secret_key %></strong></li>
      <% end %>
    </ul>

    <p> We recommend connecting to one RADIUS server from each region: </p>

    <h3> London: </h3>
    <% london_ips.each do |ip| %>
      <p class="govuk-body"> <%= ip %>
    <% end %>

    <h3> Dublin: </h3>
    <% dublin_ips.each do |ip| %>
      <p class="govuk-body"> <%= ip %>
    <% end %>
  </div>
</details>
