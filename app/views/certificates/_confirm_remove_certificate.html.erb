<% content_for :page_title, "Remove Certificate", flush: true %>

<%= error_summary(title: "Are you sure you want to remove certificate '#{@certificate.name}'?",
                  list: [govuk_inset_text(text: "Any devices using a related certificate will stop connecting to GovWifi"),
                         govuk_button_to("Remove", certificate_path(@certificate), method: :delete, warning: true)]) do %>
  <%= govuk_link_to("Cancel", certificates_path, no_visited_state: true, class: "govuk-body") %>
<% end %>
