<h1 class="govuk-heading-l"> Organisation Settings</h1>
<p class="govuk-body">
  Organisation Name: <b><%= current_organisation.name %></b>
</p>
<p class="govuk-body">
  Service Email: <b><%= current_organisation.service_email%></b>
</p>
<%= link_to "Change my organisation's name or email", edit_organisation_path(current_organisation.id), class: "govuk-button" %>
<hr class="govuk-section-break--m govuk-section-break--visible">
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l"> Team members </h1>
  </div>

  <div class="govuk-grid-column-one-third text-right">
    <% if current_user.can_manage_team? %>
      <%= link_to 'Invite team member', new_user_invitation_path, class: 'govuk-button' %>
    <% end %>
  </div>
</div>

<%= render "team_members/table", team_members: @team_members %>
