<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h2 class="govuk-heading-l">Settings</h2>
  </div>
  <div class="govuk-grid-column-one-third text-right">
    <% if current_user.can_manage_team? %>
      <%= link_to 'Invite team member', new_user_invitation_path, class: 'govuk-button' %>
    <% end %>
  </div>
</div>
<hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">
<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <h3 class="govuk-heading-m">Organisation</h3>
  </div>
</div>
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <p class="govuk-body">
      Organisation Name: <b><%= current_organisation.name %></b>
    </p>
    <p class="govuk-body">
      Service Email: <b><%= current_organisation.service_email%></b>
    </p>
  </div>
  <div class="govuk-grid-column-one-third text-right">
    <%= link_to "Change my organisation's name or email", edit_organisation_path(current_organisation.id), class: "govuk-link" %>
  </div>
</div>
<hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">
<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <h3 class="govuk-heading-m"> Team members </h3>
    <%= render "team_members/table", team_members: @team_members %>
  </div>
</div>
