<div class="govuk-grid-row">
  <div class="govuk-grid-column-three-quarters">
    <h1 class="govuk-heading-l">Bulk Upload Locations and IPs</h1>

    <% if @csv_error %>
      <div class="govuk-error-summary" role="alert" data-module="govuk-error-summary" aria-labelledby="error-summary-title">
        <h2 id="error-summary-title" class="govuk-error-summary__title">
          There is a problem
        </h2>
        <div class="govuk-error-summary__body">
          <ul class="govuk-list govuk-error-summary__list">
            <li>
              <a href='#csv-error' class="">
                <%= @csv_error %>
              </a>
            </li>
          </ul>
        </div>
      </div>
    <% end %>

    <p class="govuk-body">Upload a CSV file containing locations and Ips</p>

    <div>
      <%= form_with url: upload_locations_csv_path, multipart: true, builder: GOVUKDesignSystemFormBuilder::FormBuilder do |form| %>
        <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
        <div class="govuk-form-group govuk-form-group--error">
          <p class="govuk-error-message" id='csv-error'>
              <span class="govuk-visually-hidden">
                Error:
              </span>
            <%= @csv_error %>
          </p>
        </div>
        <%= form.govuk_file_field :upload_file, label: { text: "File to Upload" } %>
        <%= form.govuk_submit "Upload" %>
      <% end %>
    </div>
  </div>
</div>

<%= link_to "Contact GovWifi support", help_index_path, class: "govuk-link" %>
