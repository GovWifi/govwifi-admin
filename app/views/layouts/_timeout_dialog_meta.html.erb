<% # HMRC Service timeout pattern: warn after 28 min, sign out after 30 min. See design.tax.service.gov.uk/hmrc-design-patterns/service-timeout/ %>
<meta
  name="hmrc-timeout-dialog"
  content="hmrc-timeout-dialog"
  <% timeout = Devise.timeout_in.to_i %>
  <% countdown = timeout - 20 %>
  data-timeout="<%= timeout %>"
  data-countdown="<%= countdown %>"
  data-keep-alive-url="<%= timeout_keep_alive_path %>"
  data-sign-out-url="<%= destroy_user_session_path %>"
  data-timeout-url="<%= timeout_signed_out_path %>"
  data-title="You're about to be signed out"
  data-message="For your security, we will sign you out in"
  data-message-suffix=""
  data-keep-alive-button-text="Stay signed in"
  data-sign-out-button-text="Sign out"
  data-synchronise-tabs="true"
/>
