<% content_for :page_title, "Remove IP address -  #{yield :page_title}", flush: true %>

<% title = capture do %>
  Remove this IP address?
  <%= govuk_inset_text do %>
    Any device trying to connect to GovWifi at this IP address will no longer be authenticated
  <% end %>
<% end %>

<%= error_summary(title:, list: ["IP address: #{format_ip(@ip_to_delete.address)}".html_safe,
                         "Location #{@ip_to_delete.location.address}"]) do %>
  <%= govuk_button_to "Remove", ip_path(@ip_to_delete), method: :delete, warning: true %>
<% end %>
