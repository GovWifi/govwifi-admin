<% content_for :page_title, "Rotate secret key -  #{yield :page_title}", flush: true %>

<%= error_summary(title: "Are you sure you want to rotate the RADIUS secret key for #{@key_to_rotate.address}?",
                  list: ["This rotation will take effect tomorrow morning and cannot be reverted once confirmed."]) do %>
  <% govuk_button_to "Yes, rotate this RADIUS key", location_path(@key_to_rotate),
                     method: :patch, warning: true, visually_hidden_suffix: "for #{@key_to_rotate.address}" %>
<% end %>
