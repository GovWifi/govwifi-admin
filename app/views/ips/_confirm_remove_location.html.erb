<% content_for :page_title, "Remove location -  #{yield :page_title}", flush: true %>

<%= error_summary(title: "Are you sure you want to remove this location?",
                  list: [@location_to_delete.address,
                         @location_to_delete.postcode]) do %>
  <%= govuk_button_to "Yes, remove this location", location_path(@location_to_delete), method: :delete, warning: true %>
<% end %>
