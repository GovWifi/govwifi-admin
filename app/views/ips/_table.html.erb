<h3 class="govuk-heading-m"><%= location.address %></h2>
<table class="govuk-table">
  <thead class="govuk-table__head">
    <tr class="govuk-table__row">
      <th class="govuk-table__header" scope="col">IP Address</th>
      <th class="govuk-table__header"></th>
    </tr>
  </thead>
  <tbody class="govuk-table__body">
    <% location.ips.each do |ip| %>
      <tr class="govuk-table__row">
        <td class="govuk-table__cell half-column" scope="row"><%= ip.address %></td>
        <% if ip.available? %>
          <td class="govuk-table__cell half-column">Available</td>
        <% else %>
          <td class="govuk-table__cell half-column unavailable-ip">Not available until 6am tomorrow
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
