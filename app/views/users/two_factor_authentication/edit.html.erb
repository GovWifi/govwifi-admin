<% content_for :page_title, "Reset two factor authentication" %>

<%= link_to "Back", :back, class: "govuk-back-link" %>

<%= error_summary(title: " Are you sure you want to reset two factor authentication for #{@user.name}") do %>
  <%= govuk_button_to("Yes, reset two factor authentication",
                      { controller: "users/two_factor_authentication", action: "destroy" },
                      method: :delete,
                      id: @user,
                      warning: true) %>
<% end %>
