<% content_for :page_title, "Remove team member - #{yield :page_title}", flush: true %>

<% if @membership.preserve_admin_permissions? %>
  <%= error_summary(list: [govuk_link_to("You must add another administrator before you can remove #{@membership.user.name}.", new_users_invitation_path)]) %>
<% else %>
  <%= error_summary(title: "Are you sure you want to remove #{@membership.user.name}?") do %>
    <%= govuk_button_to "Yes, remove this team member", membership_path(@membership), method: :delete, warning: true %>
    <%= govuk_link_to "Cancel", memberships_path, no_visited_state: true %>
  <% end %>
<% end %>
