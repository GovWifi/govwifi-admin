<div class="govuk-error-summary" role="alert">
  <h2 class="govuk-error-summary__title">
    Are you sure you want to resend the invitation to: <%= @resend_email %>
  </h2>
  <div class="govuk-error-summary__body">
    <%= button_to("Resend invite",
                  resend_users_invitation_path(email: @resend_email),
                  "aria-label" => "Resend invite to #{@resend_email}",
                  method: :post,
                  class: "govuk-button green-button") %>
    <%= link_to "Cancel", memberships_path, class: "govuk-link--no-visited-state govuk-body" %>
  </div>
</div>
