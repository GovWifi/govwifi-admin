<%= error_summary(title: "Are you sure you want to resend the invitation to: #{@resend_email}?") do %>
  <%= govuk_button_to "Resend invite",
                      resend_users_invitation_path(email: @resend_email),
                      visually_hidden_suffix: "to #{@resend_email}" %>
