<% content_for :page_title, "Change permissions - #{yield :page_title}", flush: true %>

<% if @membership.preserve_admin_permissions? %>
  <%= error_summary(list: [govuk_link_to("You must add another administrator before you can change permissions for #{@membership.user.name}.", new_users_invitation_path)]) %>
<% else %>
  <%= error_summary(title: "Are you sure you want to change permissions for #{@membership.user.name}?") do %>
    <%= govuk_button_to "Yes, change permissions", membership_path(@membership, permission_level: params[:membership][:permission_level]), method: :patch %>
    <%= govuk_link_to "Cancel", memberships_path, no_visited_state: true %>
  <% end %>
<% end %>
